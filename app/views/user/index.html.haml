
.col-md-2
= form_tag article_index_path, :method => :get do
  = text_field_tag :input, params[:input]
  = submit_tag "Search"

.col-md-6
  = render partial: "shared/article_entry_form", locals: { prefill: @prefill }

.col-md-6
  %h3
    The last few articles you added to Cutouts:
    %span.pull-right #{link_to(fa_icon("list"), list_articles_index_path, title: "See all your articles")}

  = render "shared/list_several_articles", articles: @allArticles, partial: "shared/article_single"
